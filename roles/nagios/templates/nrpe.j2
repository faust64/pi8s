log_facility=daemon
pid_file=/var/run/nagios/nrpe.pid
server_port=5666
server_address={{ nagios_bind_address | default(ansible_default_ipv4['address']) }}
nrpe_user=nagios
nrpe_group=nagios
allowed_hosts={{ nagios_allowed_hosts | join(',') }}
dont_blame_nrpe=0
debug=0
command_timeout=60
connection_timeout=300
command[check_nrpe_available]=/bin/echo "NRPE OK"
command[check_all_disks]=/usr/lib/nagios/plugins/check_disk -w 10% -c 6% -e
command[check_disk_boot]=/usr/lib/nagios/plugins/check_disk -w 10% -c 6% -p /boot
command[check_disk_root]=/usr/lib/nagios/plugins/check_disk -w 10% -c 6% -p /
include_dir=/etc/nagios/nrpe.d/
